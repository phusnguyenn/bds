@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/ProductLayout.cshtml";
}

@using BDS.Models;
@model List<House>
@foreach (var item in Model)
{
    <div class="col-sm-4">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox" style="border-radius: 5px">
                <div class="item active">
                    <img src="~/Image/khach/khach4.jpg">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="../Image/ngu/ngu4.jpg">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="../Image/tam/tam4.jpg">
                    <div class="carousel-caption">
                    </div>
                </div>
            </div>
            <!-- Controls -->
        </div><br>
        <a style="color: black" href="@Url.Action("ProductDetail", "Home", new { @houseId = item.HouseId })">
            <span style="text-align: left;font-size: 18px;padding-top: 50px">@item.Address.</span><br>
            <span style="text-align: left;">Giá thuê: @String.Format("{0:0,0}",item.Price) đ/1 tháng</span><span style="float: right;background-color: #31708f;color: white;padding: 2px;border-radius: 5px;">Xem chi tiết</span>
            <div style="text-align: left;"><i style="color: #31708f;padding-right: 0px" class="fa fa-star" aria-hidden="true"></i><i style="color: #31708f;padding-right: 0px" class="fa fa-star" aria-hidden="true"></i><i style="color: #31708f;padding-right: 0px" class="fa fa-star" aria-hidden="true"></i><i style="color: #31708f;padding-right: 0px" class="fa fa-star" aria-hidden="true"></i><i style="color: #31708f;padding-right: 0px" class="fa fa-star" aria-hidden="true"></i>3</div>
        </a>
    </div>

}
